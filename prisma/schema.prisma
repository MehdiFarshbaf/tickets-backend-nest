generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
  role     Role    @default(USER)

  // Audit & Soft Delete
  is_active  Boolean  @default(true)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  ownedTickets    Ticket[]  @relation("TicketOwner")
  createdTickets  Ticket[]  @relation("TicketCreatedBy")
  sentMessages    Message[] @relation("MessageAuthor")
  createdMessages Message[] @relation("MessageCreatedBy")

  @@map("users")
}

model Ticket {
  id       Int          @id @default(autoincrement())
  title    String
  status   TicketStatus @default(OPEN)
  priority Priority     @default(MEDIUM)

  // Relations
  owner   User @relation("TicketOwner", fields: [ownerId], references: [id])
  ownerId Int

  creator    User? @relation("TicketCreatedBy", fields: [created_by], references: [id])
  created_by Int?

  // Audit & Soft Delete
  is_active  Boolean  @default(true)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  messages Message[]

  @@map("tickets")
}

model Message {
  id      Int    @id @default(autoincrement())
  content String
  // Relations

  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId Int

  author   User @relation("MessageAuthor", fields: [authorId], references: [id])
  authorId Int

  creator    User? @relation("MessageCreatedBy", fields: [created_by], references: [id])
  created_by Int?

  is_admin Boolean @default(false)

  // Audit & Soft Delete
  is_active  Boolean  @default(true)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("messages")
}

enum Role {
  USER
  ADMIN
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}
